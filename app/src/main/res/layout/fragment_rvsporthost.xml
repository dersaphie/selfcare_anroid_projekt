<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RvSportHostFragment">

    <TextView
        android:id="@+id/tvListHeadline"
        android:text="@string/workoutHeadline"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/HeadlineText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl95PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWorkout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_exercise"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvListHeadline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvExerciseApiErrorText"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="error"/>

    <Button
        android:id="@+id/btnClearGetMuscleEquip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvWorkout"
        app:layout_constraintStart_toStartOf="parent"
        android:text="M.E"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btnClearGetCardioEquip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvWorkout"
        app:layout_constraintStart_toEndOf="@id/btnClearGetMuscleEquip"
        android:text="C.E."
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btnClearGetCardioBW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvWorkout"
        app:layout_constraintStart_toEndOf="@id/btnClearGetCardioEquip"
        android:text="C.BW."
        tools:ignore="MissingConstraints"/>



</androidx.constraintlayout.widget.ConstraintLayout>