<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/size_8"
    tools:context=".NutritionFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl50PercentVert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl33PercentVert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl66PercentVert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl99PercentVert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl005PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl40PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl50PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <Button
        android:id="@+id/picAPIGoodMood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0"
        android:layout_margin="@dimen/size_16"
        android:text="KcalCount"
        app:layout_constraintTop_toTopOf="@id/gl005PercentHor"
        app:layout_constraintBottom_toTopOf="@id/gl40PercentHor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_desc_API"
        android:background="@drawable/sh_button_pressed"/>


    <Button
        android:id="@+id/btnFavFood"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        android:background="@drawable/sh_button_frame_default"
        android:text="Fav essen"
        app:layout_constraintBottom_toTopOf="@id/spaceNutrition"
        app:layout_constraintEnd_toEndOf="@id/gl33PercentVert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl50PercentHor" />


    <!--    <Button
            android:id="@+id/animNutrition"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_164"
            android:layout_margin="@dimen/size_8"
            android:background="@drawable/button_pressed"
            android:contentDescription="@string/content_desc_Profile"
            app:layout_constraintBottom_toTopOf="@id/space"
            app:layout_constraintEnd_toEndOf="@id/gl66PercentVert"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/gl33PercentVert"
            app:layout_constraintTop_toTopOf="@id/gl50PercentHor"
            app:layout_constraintVertical_bias="0.0" />-->

    <Button
        android:id="@+id/btnReceipe"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        android:text="Rezepte"
        app:layout_constraintTop_toTopOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toTopOf="@id/spaceNutrition"
        app:layout_constraintStart_toStartOf="@id/gl66PercentVert"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_desc_Profile"
        android:background="@drawable/sh_button_frame_default" />

    <Button
        android:id="@+id/btnBodyValues"
        android:text="KÖRPERWERTE"
        android:layout_width="119dp"
        android:layout_height="116dp"
        app:layout_constraintTop_toBottomOf="@id/spaceNutrition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl33PercentVert"
        android:background="@drawable/sh_button_frame_default"/>

    <Button
        android:id="@+id/btnNutritionGuideline"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        android:text="NÄHRSTOFFGUIDELINE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl66PercentVert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceNutrition"
        android:background="@drawable/sh_button_frame_default"/>

    <Button
        android:id="@+id/btnAddSmth"

        android:layout_width="@dimen/size_0"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl50PercentHor"
        app:layout_constraintStart_toStartOf="@id/gl33PercentVert"
        app:layout_constraintEnd_toEndOf="@id/gl66PercentVert"

        android:background="@drawable/sh_circle"/>

<!--
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl33PercentVert"
        app:layout_constraintEnd_toEndOf="@id/gl66PercentVert"
/>
-->


    <Space
        android:id="@+id/spaceNutrition"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnMainMenu"
        android:text="MENÜBAR"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl33PercentVert"
        app:layout_constraintVertical_bias="0"
        style="@style/Widget.AppCompat.Button.Colored" />

</androidx.constraintlayout.widget.ConstraintLayout>