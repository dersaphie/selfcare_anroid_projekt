<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/size_8"
        tools:context=".NutritionFragment">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl50PercentVert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl33PercentVert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl66PercentVert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl99PercentVert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl009PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl44PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl50PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl91PercentHor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />


    <Button
        android:id="@+id/btnFavFood"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        style="?button"
        android:text="Fav essen"
        app:layout_constraintTop_toTopOf="@id/gl009PercentHor"
        app:layout_constraintBottom_toTopOf="@id/gl44PercentHor"
        app:layout_constraintEnd_toEndOf="@id/gl33PercentVert"
        app:layout_constraintStart_toStartOf="parent"
         />


    <Button
        android:id="@+id/btnRecipes"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        style="?button"
        android:text="Rezepte"
        app:layout_constraintTop_toTopOf="@id/gl009PercentHor"
        app:layout_constraintBottom_toTopOf="@id/gl44PercentHor"
        app:layout_constraintStart_toStartOf="@id/gl66PercentVert"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_desc_profile"
         />

    <Button
        android:id="@+id/btnMeasurement"
        android:text="KÖRPERWERTE"
        android:layout_width="119dp"
        android:layout_height="116dp"
        style="?button"
        app:layout_constraintTop_toBottomOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toBottomOf="@id/gl91PercentHor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl33PercentVert"/>

    <Button
        android:id="@+id/animNutritionToday"
        android:layout_width="119dp"
        android:layout_height="116dp"
        android:layout_margin="@dimen/size_8"
        style="?button"
        android:text="NÄHRSTOFFGUIDELINE"
        app:layout_constraintTop_toBottomOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toBottomOf="@id/gl91PercentHor"
        app:layout_constraintStart_toStartOf="@id/gl66PercentVert"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="@dimen/size_0"
        android:layout_height="80dp"
        android:layout_margin="30dp"
        style="?button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl33PercentVert"
        app:layout_constraintEnd_toEndOf="@id/gl66PercentVert" />


    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/gl50PercentHor"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>